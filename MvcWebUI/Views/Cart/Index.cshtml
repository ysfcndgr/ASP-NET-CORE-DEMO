@model CartListViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";

}

@if (Model.Cart.CartLines.Count == 0)

{
<h2 class="badge badge-danger">
    There are no items in the cart
</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ProductName</th>
                <th scope="col">Explanation</th>
                <th scope="col">Price</th>
                <th scope="col">Stok Quantity</th>
                <th scope="col">Sales Quantity</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var cartLine in Model.Cart.CartLines)
            {
                <tr>
                    <th scope="row">@cartLine.Product.ProductId</th>
                    <td>@cartLine.Product.ProductName</td>
                    <td>@cartLine.Product.QuantityPerUnit</td>
                    <td>@cartLine.Product.UnitPrice</td>
                    <td>@cartLine.Product.UnitsInStock</td>
                    <td>@cartLine.Quantity</td>
                    <td><a class="btn btn-sm btn-danger" asp-controller="Cart" asp-route-productId="@cartLine.Product.ProductId" asp-action="RemoveFromCart">Delete</a></td>
                </tr>

            }

        </tbody>
    </table>

}

